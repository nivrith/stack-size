{
  "name": "stack-size",
  "version": "0.1.0",
  "description": "Get Maximum Call Stack Size of JS runtime",
  "main": "index.js",
  "repository": "https://github.com/nivrith/stack-size",
  "author": "Nivrith <nivrith.mandayam@gmail.com>",
  "license": "MIT",
  "keywords": [
    "max-stack",
    "callstack",
    "max-stack-size",
    "maximum",
    "max-call-stack",
    "stack-size"
  ],
  "scripts": {
    "compile": "tsc -b",
    "start": "yarn compile && node dist/src/index",
    "test": "nyc mocha --require ts-node/register test/**/*.spec.ts",
    "prepublishOnly": "npm run compile",
    "pretest": "npm run compile",
    "clean": "del-cli dist",
    "docs": "typedoc src",
    "release": "npx np"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "lines": 80,
    "exclude": [
      "test",
      "docs",
      "dist"
    ],
    "check-coverage": true
  },
  "files": [
    "dist/src"
  ],
  "dependencies": {},
  "engines": {
    "node": ">=8"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/chai": "^4.1.7",
    "@types/jasmine": "^3.3.13",
    "@types/mocha": "^5.2.7",
    "@types/sinon": "^7.0.13",
    "chai": "^4.2.0",
    "del-cli": "^2.0.0",
    "jasmine": "^3.4.0",
    "mocha": "^6.1.4",
    "np": "^5.0.3",
    "nyc": "^14.1.1",
    "sinon": "^7.3.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.5.2"
  }
}
